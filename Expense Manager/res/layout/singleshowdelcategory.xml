<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/words_bgblue"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvsingleCat_category2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvsingleCat_Date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvsingleCat_category2"
        android:layout_marginLeft="7dp"
        android:text="TextView"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvsingleCat_Cost2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvsingleCat_Date2"
        android:layout_alignBottom="@+id/tvsingleCat_Date2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"
        android:text="TextView"
        android:textColor="#000000" />
    
    
        
     <TextView
        android:id="@+id/tvsingleCat_Id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvsingleCat_category2month"
        android:text="TextView"
        android:visibility="gone"
        android:layout_marginRight="7dp"
        android:textColor="#000000" />

    

</RelativeLayout>